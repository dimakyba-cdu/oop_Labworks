<Window x:Class="Lab2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab2"
        mc:Ignorable="d"
        ResizeMode="CanResize"
        Title="Lab2"
        Height="450"
        Width="300"
        MinWidth="300"
        MinHeight="450">
    <Window.Resources>
        <Style x:Key="CalculatorButtonStyle"
               TargetType="Button">
            <Setter Property="FontSize"
                    Value="18"/>
            <Setter Property="FontWeight"
                    Value="Bold"/>
            <Setter Property="Background"
                    Value="#FF333333"/>
            <Setter Property="Foreground"
                    Value="White"/>
            <Setter Property="BorderBrush"
                    Value="#FF666666"/>
            <Setter Property="BorderThickness"
                    Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver"
                         Value="True">
                    <Setter Property="Background"
                            Value="#FF444444"/>
                </Trigger>
                <Trigger Property="IsPressed"
                         Value="True">
                    <Setter Property="Background"
                            Value="#FF555555"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DisplayTextStyle"
               TargetType="TextBlock">
            <Setter Property="FontFamily"
                    Value="Segoe UI"/>
            <Setter Property="Foreground"
                    Value="White"/>
        </Style>
    </Window.Resources>

    <Grid Background="#FF1E1E1E">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0"
              Margin="20,0,20,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Button x:Name="MenuButton"
                    Content="≡"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Width="30"
                    Height="30"
                    Grid.Row="0"
                    Click="ToggleScientific_Click"
                    Style="{StaticResource CalculatorButtonStyle}"/>
            <Button x:Name="CollapseButton"
                    Content="&lt;"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Width="30"
                    Height="30"
                    Grid.Row="0"
                    Click="ToggleScientific_Click"
                    Visibility="Collapsed"
                    Style="{StaticResource CalculatorButtonStyle}"/>
            <TextBlock x:Name="CalculationDisplay"
                       Grid.Row="0"
                       TextAlignment="Right"
                       FontSize="16"
                       Foreground="Gray"
                       Margin="40,0,0,5"
                       Style="{StaticResource DisplayTextStyle}"/>
            <TextBlock x:Name="ResultDisplay"
                       Grid.Row="1"
                       TextAlignment="Right"
                       FontSize="24"
                       Margin="0,5,0,0"
                       Style="{StaticResource DisplayTextStyle}"/>
        </Grid>

        <Grid x:Name="ButtonsGrid"
              Grid.Row="1"
              Margin="20,0,20,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition x:Name="ExtraColumn"
                                  Width="0"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="4*"/>
                <RowDefinition Height="4*"/>
                <RowDefinition Height="4*"/>
                <RowDefinition Height="4*"/>
                <RowDefinition Height="4*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Button Content="C"
                    Grid.Row="0"
                    Grid.Column="1"
                    Margin="2,2,2,2"
                    Click="Clear_Click"
                    Style="{StaticResource CalculatorButtonStyle}"/>
            <Button Content="↩"
                    Grid.Row="0"
                    Grid.Column="0"
                    Margin="2,2,2,2"
                    Click="Undo_Click"
                    Style="{StaticResource CalculatorButtonStyle}"/>
            <Button Content="⌫"
                    Grid.Row="0"
                    Grid.Column="2"
                    Margin="2,2,2,2"
                    Click="Backspace_Click"
                    Style="{StaticResource CalculatorButtonStyle}"/>
            <Button Content="/"
                    Grid.Row="0"
                    Grid.Column="3"
                    Margin="2,2,2,2"
                    Click="Operator_Click"
                    Style="{StaticResource CalculatorButtonStyle}"/>
            <Button Content="π"
                    Grid.Row="0"
                    Grid.Column="4"
                    Margin="2,2,-2,2"
                    Click="Scientific_Click"
                    Visibility="Collapsed"
                    Style="{StaticResource CalculatorButtonStyle}"/>

            <Button Content="7"
                    Grid.Row="1"
                    Grid.Column="0"
                    Margin="2,2,2,2"
                    Click="Number_Click"
                    Style="{StaticResource CalculatorButtonStyle}"/>
            <Button Content="8"
                    Grid.Row="1"
                    Grid.Column="1"
                    Margin="2,2,2,2"
                    Click="Number_Click"
                    Style="{StaticResource CalculatorButtonStyle}"/>
            <Button Content="9"
                    Grid.Row="1"
                    Grid.Column="2"
                    Margin="2,2,2,2"
                    Click="Number_Click"
                    Style="{StaticResource CalculatorButtonStyle}"/>
            <Button Content="*"
                    Grid.Row="1"
                    Grid.Column="3"
                    Margin="2,2,2,2"
                    Click="Operator_Click"
                    Style="{StaticResource CalculatorButtonStyle}"/>
            <Button Content="e"
                    Grid.Row="1"
                    Grid.Column="4"
                    Margin="2,2,-2,2"
                    Click="Scientific_Click"
                    Visibility="Collapsed"
                    Style="{StaticResource CalculatorButtonStyle}"/>

            <Button Content="4"
                    Grid.Row="2"
                    Grid.Column="0"
                    Margin="2,2,2,2"
                    Click="Number_Click"
                    Style="{StaticResource CalculatorButtonStyle}"/>
            <Button Content="5"
                    Grid.Row="2"
                    Grid.Column="1"
                    Margin="2,2,2,2"
                    Click="Number_Click"
                    Style="{StaticResource CalculatorButtonStyle}"/>
            <Button Content="6"
                    Grid.Row="2"
                    Grid.Column="2"
                    Margin="2,2,2,2"
                    Click="Number_Click"
                    Style="{StaticResource CalculatorButtonStyle}"/>
            <Button Content="-"
                    Grid.Row="2"
                    Grid.Column="3"
                    Margin="2,2,2,2"
                    Click="Operator_Click"
                    Style="{StaticResource CalculatorButtonStyle}"/>
            <Button Content="√"
                    Grid.Row="2"
                    Grid.Column="4"
                    Margin="2,2,-2,2"
                    Click="Scientific_Click"
                    Visibility="Collapsed"
                    Style="{StaticResource CalculatorButtonStyle}"/>

            <Button Content="1"
                    Grid.Row="3"
                    Grid.Column="0"
                    Margin="2,2,2,2"
                    Click="Number_Click"
                    Style="{StaticResource CalculatorButtonStyle}"/>
            <Button Content="2"
                    Grid.Row="3"
                    Grid.Column="1"
                    Margin="2,2,2,2"
                    Click="Number_Click"
                    Style="{StaticResource CalculatorButtonStyle}"/>
            <Button Content="3"
                    Grid.Row="3"
                    Grid.Column="2"
                    Margin="2,2,2,2"
                    Click="Number_Click"
                    Style="{StaticResource CalculatorButtonStyle}"/>
            <Button Content="+"
                    Grid.Row="3"
                    Grid.Column="3"
                    Margin="2,2,2,2"
                    Click="Operator_Click"
                    Style="{StaticResource CalculatorButtonStyle}"/>
            <Button Content="x²"
                    Grid.Row="3"
                    Grid.Column="4"
                    Margin="2,2,-2,2"
                    Click="Scientific_Click"
                    Visibility="Collapsed"
                    Style="{StaticResource CalculatorButtonStyle}"/>

            <Button Content="↪"
                    Grid.Row="4"
                    Grid.Column="0"
                    Margin="2,2,2,2"
                    Click="Redo_Click"
                    Style="{StaticResource CalculatorButtonStyle}"/>
            <Button Content="0"
                    Grid.Row="4"
                    Grid.Column="1"
                    Margin="2,2,2,2"
                    Click="Number_Click"
                    Style="{StaticResource CalculatorButtonStyle}"/>
            <Button Content=","
                    Grid.Row="4"
                    Grid.Column="2"
                    Margin="2,2,2,2"
                    Click="Decimal_Click"
                    Style="{StaticResource CalculatorButtonStyle}"/>
            <Button Content="="
                    Grid.Row="4"
                    Grid.Column="3"
                    Margin="2,2,2,2"
                    Click="Equals_Click"
                    Style="{StaticResource CalculatorButtonStyle}"/>
            <Button Content="ln"
                    Grid.Row="4"
                    Grid.Column="4"
                    Margin="2,2,-2,2"
                    Click="Scientific_Click"
                    Visibility="Collapsed"
                    Style="{StaticResource CalculatorButtonStyle}"/>
        </Grid>
    </Grid>
</Window>
